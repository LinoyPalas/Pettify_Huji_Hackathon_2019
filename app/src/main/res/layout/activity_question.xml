<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="@string/residence_title"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleTextView"
        android:layout_margin="15dp"
        android:text="@string/chooseLoc"
        android:textSize="26sp" />

    <ViewFlipper
        android:id="@+id/signup_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/questionTextView">

        <!--- Questions Layouts -->

        <!--- second question -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp">

                <ImageButton
                    android:id="@+id/privateHome"
                    android:background="@drawable/next"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="nextView"
                    android:text="@string/continue_btn" />

                <ImageButton
                    android:id="@+id/apartment"
                    android:background="@drawable/next"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="nextView"
                    android:text="@string/continue_btn" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30">

                <ImageButton
                    android:id="@+id/groundWithGarden"
                    android:background="@drawable/next"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="nextView"
                    android:text="@string/continue_btn" />

                <ImageButton
                    android:id="@+id/ground"
                    android:background="@drawable/next"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="nextView"
                    android:text="@string/continue_btn" />

                <ImageButton
                    android:id="@+id/aboveGround"
                    android:background="@drawable/next"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:onClick="nextView"
                    android:text="@string/continue_btn" />

            </LinearLayout>
        </LinearLayout>

        <!--- first question -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/northBtn"
                android:layout_width="230dip"
                android:layout_height="100dip"
                android:background="@drawable/map_01"
                android:onClick="pickNorth" />

            <ImageButton
                android:id="@+id/centerBtn"
                android:layout_width="230dip"
                android:layout_height="100dip"
                android:background="@drawable/map_02"
                android:onClick="pickCenter" />

            <ImageButton
                android:id="@+id/southBtn"
                android:layout_width="230dip"
                android:layout_height="200dip"
                android:background="@drawable/map_03"
                android:onClick="pickSouth" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="second" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="third" />

        <!--- End Questions Layouts -->


    </ViewFlipper>

    <ImageButton
        android:id="@+id/nextButton"
        android:background="@drawable/next"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="nextView"
        android:text="@string/continue_btn" />

    <ImageButton
        android:id="@+id/prevButton"
        android:background="@drawable/prev"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="previousView"
        android:text="@string/back_btn" />

</RelativeLayout>